<div class="jumbotron justify-content-center">
    {{!-- Burger Header Image --}}
    <img src="/public/assets/img/burger.png" alt="Giant Burger">

    <h1 class="display-4 text-center my-2">Eat-Da-Burger!</h1>

</div>

<div class="burgerOrder">

    <h2>Add a Burger</h2>
    <form class="create-form">

    <div class="formBurger form-group justify-content-center col-12">
        <label for="newBurger">New Burger:</label>
        {{!-- <textarea class="form-control" id="burgerEntry" rows="3"></textarea> --}}
        <input type="text" id="burger-name" name="name" rows="3">
    </div>

    <button type="submit" class="btn add-btn">Order Burger</button>
    </form>


    {{!-- Burgers not eaten --}}
    <div class="ordered">
    <h3>Added to Order</h2>
        <ul>
        {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger devoured=true}}
            {{/unless}}
        {{/each}}
        </ul>
    </div>

    {{!-- Burgers eaten --}}
    <div class="devoured">
    <h3>Devoured</h2>

        <ul>
        {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger devoured=false}}
            {{/if}}
        {{/each}}
        </ul>
    </div>

</div>